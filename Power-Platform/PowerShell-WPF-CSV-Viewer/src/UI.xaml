<Window x:Class="CsvViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSV Viewer" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SearchBox" Width="300" Height="30" Margin="10" VerticalAlignment="Top" 
                 PlaceholderText="Search..." />
        <Button x:Name="SubmitButton" Content="Submit" Width="100" Height="30" Margin="320,10,0,0" 
                VerticalAlignment="Top" Click="SubmitButton_Click" />
        <DataGrid x:Name="DataGrid" Margin="10,50,10,10" AutoGenerateColumns="False" 
                  SelectionMode="Extended" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="NickName" Binding="{Binding NickName}" Width="*"/>
                <DataGridTextColumn Header="OwnerUPN" Binding="{Binding OwnerUPN}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>